# Production Environment Variables
NODE_ENV=production

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/dir_crm_prod"

# JWT
JWT_SECRET="your-super-secure-production-jwt-key-change-this"

# Server
PORT=3002
FRONTEND_URL="https://your-domain.com"

# Redis
REDIS_URL="redis://localhost:6379"

# S3 Storage (Timeweb)
S3_ENDPOINT="https://s3.twcstorage.ru"
S3_REGION="ru-1"
S3_BUCKET="f7eead03-crmfiles"
S3_ACCESS_KEY="your-production-access-key"
S3_SECRET_KEY="your-production-secret-key"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-super-secure-session-secret-change-this"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH="/var/log/crm/app.log"

# SSL/TLS
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/private.key"
